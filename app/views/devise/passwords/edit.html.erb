<div class="sign-in-form-container">
  <div class="sign-in-form">
    <h2>Change Password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New Password (" + @minimum_password_length.to_s + " characters minimum)" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", style: "margin-top:90px;" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>