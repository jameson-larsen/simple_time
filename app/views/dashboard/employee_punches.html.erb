<h2 style="margin-top:15px;margin-left:15px;"><%= @employee.f_name + " " + @employee.l_name %></h2>
<div class="punch-main-container">
    <% @punches.each do |p| %>
        <div class="punch-section-container">
            <div>
                <%= p.in.in_time_zone(current_user.time_zone).strftime("In: %m/%d/%Y at %I:%M %p , ") %>
                <%= p.out.in_time_zone(current_user.time_zone).strftime("Out: %m/%d/%Y at %I:%M %p , ") %>
                <%= "#{'%.2f' % p.duration} hours" %>
            </div>
            <%= button_to "Edit", edit_punch_path(@employee, p), method: :get %>
        </div>
    <% end %>
</div>